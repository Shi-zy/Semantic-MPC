<?xml version="1.0"?>
<launch>
    <!-- Custom world launch file -->
    <arg name="world_name" default="custom_world"/>
    <arg name="model" default="quadcopter"/>
    
    <!-- Launch Gazebo with custom world -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(find uav_simulator)/worlds/custom/custom_world.world"/>
        <arg name="paused" value="false"/>
        <arg name="use_sim_time" value="true"/>
        <arg name="gui" value="true"/>
        <arg name="headless" value="false"/>
        <arg name="debug" value="false"/>
        <arg name="verbose" value="false"/>
    </include>
    
    <!-- Spawn quadcopter -->
    <include file="$(find uav_simulator)/launch/spawn_quadcopter.launch">
        <arg name="model" value="$(arg model)"/>
        <arg name="x" value="0"/>
        <arg name="y" value="0"/>
        <arg name="z" value="1.5"/>
    </include>
    
    <!-- Launch MPC navigation -->
    <include file="$(find autonomous_flight)/launch/intent_mpc_demo.launch">
        <arg name="map_file" value="$(find autonomous_flight)/cfg/saved_map/custom_world_static.pcd"/>
    </include>
</launch>